{
    "name": "d4ver/lambdalabs-php",
    "description": "Lambda Labs Cloud API Client",
    "keywords": [
        "D4veR",
        "lambdalabs-php"
    ],
    "homepage": "https://github.com/d4ver/lambdalabs-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Dave",
            "email": "david.rechkemmer@googlemail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "saloonphp/saloon": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "D4veR\\LambdaLabs\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "D4veR\\LambdaLabs\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
